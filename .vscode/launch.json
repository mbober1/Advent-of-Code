{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch debug",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/AoC",
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "linux": {
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb"
      },
      "preLaunchTask": "build",
      "setupCommands": [
        {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
        }
    ],
    },
    
  ]
}